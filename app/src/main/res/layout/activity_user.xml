<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.user.UserActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/activity_user_edit_text_firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/activity_user_first_name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/activity_user_edit_text_lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/activity_user_last_name"
            android:inputType="" />

        <EditText
            android:id="@+id/activity_user_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/activity_user_birdthday"
            android:inputType="date" />

        <EditText
            android:id="@+id/activity_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/activity_user_email"
            android:inputType="textEmailAddress" />


        <EditText
            android:id="@+id/activity_user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/activity_user_password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/activity_user_postal_adress"
            android:inputType="textPostalAddress" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_phone"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:background="@drawable/icone_phone"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/activity_user_button_picture"
                android:layout_width="200dp"
                android:background="#FFFFFF"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icone_camera" />
        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:stepSize="1" />

        <Button
            android:id="@+id/button_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/activity_user_button_submit" />

        <Spinner
            android:id="@+id/town_spinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:entries="@array/departments_array">
        </Spinner>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>