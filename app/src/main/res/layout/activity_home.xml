<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/activity_home_button_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:text="@string/activity_home_button_home"
            android:textSize="20sp" />
        <!--        padding pour espace autour du texte-->
        <ImageView
            android:id="@+id/activity_home_imageview_android"
            android:layout_width="100dp"
            android:layout_height="266dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/gon" />

        <Button
            android:id="@+id/activity_home_button_start"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:padding="30dp"
            android:text="@string/activity_home_button_start"
            android:textSize="20sp" />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/activity_home_textview_ess"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="30sp"
            android:background="#909090"
            android:text="ess" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:background="#255000"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>